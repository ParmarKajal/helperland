    <section>
        <div class="container d-flex flex-wrap justify-content-center mt-5">
            <form asp-action="Account" asp-controller="Home" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row">

                    <div class="col">
                        <input asp-for="firstname" class="form-control form-field" placeholder="First Name" id="first">
                        <span asp-validation-for="firstname" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <input asp-for="lastname" class="form-control form-field" placeholder="Last Name" id="last">
                        <span asp-validation-for="lastname" class="text-danger"></span>
                    </div>

                </div>
                <div class="row mt-3">

                    <div class="col">
                        <input asp-for="email" class="form-control form-field" placeholder="Email Address" id="mailfield">
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>

                    <div class="col">
                        <div class="input-group mobile-no">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="addon">+49</span>
                            </div>
                            <input asp-for="mobile" class="form-control form-field" placeholder="Mobile Number" id="no">
                        </div>
                    </div>
                </div>

                <div class="row mt-3">

                    <div class="col">
                        <input type="password" asp-for="Password" class="form-control form-field" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col">
                        <input type="password" asp-for="ConfirmPassword" class="form-control form-field" placeholder="ConfirmPassword" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-check mt-2 mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="privacy"> I have read the <p>Privacy Policy</p>
                    </label>
                </div>
                <div class="row">
                    <div class="col mb-2">
                        <input type="submit" value="Register" class="btn-register rounded-pill border-0">
                    </div>
                </div>
                <div class="last-text mb-5 mt-3">
                    <p>Already Registered?</p>
                    <a asp-action="Index" asp-controller="Home">Login now</a>
                </div>
            </form>
        </div>
    </section>





    

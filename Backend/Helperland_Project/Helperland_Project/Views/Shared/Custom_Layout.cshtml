<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Helperland</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
    <link href="~/css/Custom_Layout.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg  navbar-dark" style="background-color: #525252;">
            <div class="container-fluid" id="navbar">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="../image/white-logo-transparent-background.png" id="logo"></a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
                    <ul class="navbar-nav">

                        <li class="nav-item px-1">
                            <a class="nav-link rounded-pill text-center border border-1  nav-btns nav-padding ms-1 me-1"
                               asp-controller="Home" asp-action="Book-Service">Book Now</a>
                        </li>

                        <li class="nav-item px-1">
                            <a class="nav-link rounded-pill text-center border one-btn border-1 nav-padding ms-1 me-1"
                               asp-controller="Home" asp-action="Price">Prices & Services</a>
                        </li>

                        <li class="nav-item px-1">
                            <a class="nav-link nav-padding text-center" href="#">Warranty</a>
                        </li>

                        <li class="nav-item px-1">
                            <a class="nav-link nav-padding text-center" href="#">Blog</a>
                        </li>

                        <li class="nav-item px-1">
                            <a class="nav-link nav-padding text-center" asp-controller="Home" asp-action="Contact" target="_blank">Contact</a>
                        </li>

                        <li class="nav-item px-1">
                            <a class="nav-link rounded-pill text-center border border-1 nav-btns nav-padding ms-1 me-1"
                               asp-controller="Home" asp-action="Login">Login</a>
                        </li>

                        <li class="nav-item px-1">
                            <a class="nav-link rounded-pill text-center border border-1  nav-btns nav-padding"
                               asp-controller="Home" asp-action="Helper">Become a Helper</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <section class="news-letter pt-5">
        <div class="container text-center">
            <h2>GET OUR NEWSLETTER</h2>
            <div class="form-row d-flex justify-content-center align-items-center">
                <div class="form-group pt-2">
                    <label for="email" style="display: none;">YOUR EMAIL</label>
                    <input type="text" placeholder="YOUR EMAIL" id="email" class="form-control">
                </div>
                <div class="btn-wrapper">
                    <button class="red-btn">Submit</button>
                </div>
            </div>
        </div>
    </section>

    <footer>

        <div class="container d-flex justify-content-between align-items-center  py-3">
            <div>
                <img src="../image/footer-logo.png" alt="" width="100%">
            </div>
            <div class="d-flex flex-wrap text-center justify-content-center">
                <a class="px-3 pb-3 mt-4"
                   asp-controller="Home" asp-action="Index" target="_blank">HOME</a>
                <a class="px-3 pb-3 mt-4"
                   asp-controller="Home" asp-action="About" target="_blank">ABOUT</a>
                <a class="px-3 pb-3 mt-4"
                   href="#">TESTIMONIALS</a>
                <a class="px-3 pb-3 mt-4"
                   asp-controller="Home" asp-action="FAQ" target="_blank">FAQS</a>
                <a class="px-3 pb-3 mt-4"
                   href="#">INSURRANCE POLICY</a>
                <a class="px-3 pb-3 mt-4"
                   href="#">IMPRESSUM</a>
            </div>

            <div>
                <a style="color: white; text-decoration: none;" href="#" class="fab fa-facebook-f"></a>
                <a style="color: white; text-decoration: none;" href="#" class="fab fa-instagram"></a>
            </div>
        </div>


        <div class="container mb-0" style="font-family: 'Roboto';">
            <div class="footer-line" style="width:1120px; height:1px; padding-left: 120px;  background-color: #646464;"></div>
            <div style="color: #9BA0A3; font-size: 14px;" class="text-center mt-4 mb-0 py-2">
                ©2018 Helperland. All
                rights
                reserved. &nbsp &nbsp Terms and Conditions | Privacy Policy
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/5602f8a8c9.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


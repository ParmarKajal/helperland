                        <img src="../image/calendar.png">
                        <b>@Html.DisplayFor(modelitem => Date)</b>
                    </div>
                    <p class="px-2"> @Html.DisplayFor(modelitem => clocktime) - @Html.DisplayFor(modelitem => totaltime)</p>
                </td>

                <td>


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer> Dashboard</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/CustomerDashboard.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
</head>

<body>

    <!--navigation menu-->
    <header>
        <nav class="navbar navbar-expand-lg  navbar-dark main-nav">
            <div class="container-fluid" id="navbar">
                <a class="navbar-brand" href="#"><img src="../image/logo-small.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item px-1">
                            <a class="nav-link text-center rounded-pill menu-simple border border-1 px-3 me-2" style="background-color:#29626d;" href="#">
                                Book
                                Now
                            </a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link  me-2 hovermenu" href="#">Prices & services</a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link me-2 hovermenu" href="#">Warranty</a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link me-2 hovermenu" href="#">Blog</a>
                        </li>
                        <li class="nav-item px-1">
                            <a class="nav-link me-4 hovermenu" href="contact.html" target="_blank">Contact</a>
                        </li>
                    </ul>
                </div>

                <div class="vertical-line">
                    <div class="nav-item">
                        <a class="nav-link notification" href="#">
                            <img src="../image/icon-notification.png" style="position: absolute;">
                            <div class="notification-num">
                                <sup>2</sup>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <img src="../image/admin-user.png">
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Invoices</a></li>
                        <li><a class="dropdown-item" asp-action="Profile" asp-controller="Customer">My Settings</a></li>
                        <li><a class="dropdown-item" href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!--user name-->
    <section class="title">
        <h1 class="welcome-text text-center">Welcome,<b> @ViewBag.FirstName!</b></h1>
        <div class="welcome-line"></div>
    </section>

    <!--main section-->

    <main class="px-0">
        <div class="container-fluid px-0">
            <div class="row px-0">

                <!------------------------table 1---------------------------------------------->
                <div class="col-sm-3 customer-dashboard-table1  flex-column">
                    <nav class="navbar">
                        <ul class="navbar-nav">
                            <li class="nav-item" onclick="Dashboard()">
                                <a class="nav-link customer-dashboard-table1-content active px-3">Dashboard</a>
                            </li>
                            <hr class="line">
                            <li class="nav-item" onclick="ServiceHistory()">
                                <a class="nav-link customer-dashboard-table1-content  px-3">Service History</a>
                            </li>
                            <hr class="line">
                            <li class="nav-item">
                                <a class="nav-link customer-dashboard-table1-content px-3">Service Schedule</a>
                            </li>
                            <hr class="line">
                            <li class="nav-item">
                                <a class="nav-link customer-dashboard-table1-content px-3">Favourite Pros</a>
                            </li>
                            <hr class="line">
                            <li class="nav-item">
                                <a class="nav-link customer-dashboard-table1-content px-3">Invoices</a>
                            </li>
                            <hr class="line">
                            <li class="nav-item">
                                <a class="nav-link customer-dashboard-table1-content px-3">Notification</a>
                            </li>
                            <hr class="line">
                        </ul>
                    </nav>
                </div>

                <!-----------------------table 2---------------------------->

                <div class="col-sm-9 px-0">
                    <div id="CustomerDashboardContent">
                        @await Html.PartialAsync("CustomerDashboard.cshtml");
                    </div>

                    <div id="CustomerServiceHistoryContent" style="display:none;">
                        @await Html.PartialAsync("ServiceHistory.cshtml");
                    </div>

                </div>
            </div>
        </div>
    </main>

    <footer>

        <div class="container d-flex justify-content-between align-items-center  py-3">
            <div>
                <img src="../image/footer-logo.png" alt="" width="100%">
            </div>
            <div class="d-flex flex-wrap text-center justify-content-center">
                <a class="px-3 pb-3 mt-4"
                   asp-controller="Home" asp-action="Index" target="_blank">HOME</a>
                <a class="px-3 pb-3 mt-4"
                   asp-controller="Home" asp-action="About" target="_blank">ABOUT</a>
                <a class="px-3 pb-3 mt-4"
                   href="#">TESTIMONIALS</a>
                <a class="px-3 pb-3 mt-4"
                   asp-controller="Home" asp-action="FAQ" target="_blank">FAQS</a>
                <a class="px-3 pb-3 mt-4"
                   href="#">INSURRANCE POLICY</a>
                <a class="px-3 pb-3 mt-4"
                   href="#">IMPRESSUM</a>
            </div>

            <div>
                <a style="color: white; text-decoration: none;" href="#" class="fab fa-facebook-f"></a>
                <a style="color: white; text-decoration: none;" href="#" class="fab fa-instagram"></a>
            </div>
        </div>


        <div class="container mb-0" style="font-family: 'Roboto';">
            <div class="footer-line" style="width:1120px; height:1px; padding-left: 120px;  background-color: #646464;"></div>
            <div style="color: #9BA0A3; font-size: 14px;" class="text-center mt-4 mb-0 py-2">
                ©2018 Helperland. All
                rights
                reserved. &nbsp &nbsp Terms and Conditions | Privacy Policy
            </div>
        </div>
    </footer>

    <script type="text/javascript">
        function Dashboard() {
            $("#CustomerDashboardContent").show();
            $("#CustomerServiceHistoryContent").hide();
        }

        function ServiceHistory() {
            $("#CustomerServiceHistoryContent").show();
            $("#CustomerDashboardContent").hide();
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


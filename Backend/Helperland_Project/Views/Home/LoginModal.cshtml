<div class="container login-modal">
    <div class="modal" id="login">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title text-center">Login to your account </h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form asp-action="Index" asp-controller="Home" method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group mt-2">
                            <div class="input-group">
                                <input asp-for="email" class="form-control rounded-end" placeholder="Email" aria-label="email" aria-describedby="email">
                                <span class="user"><i class="fa fa-user"></i></span>
                            </div>
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <div class="input-group">
                                <input asp-for="Password" placeholder="Password" class="form-control rounded-end" aria-label="pwd" aria-describedby="pwd">
                                <span class="user"><i class="fa fa-lock"></i></span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mt-2 mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="RememberMe" type="checkbox"> Remember me
                            </label>
                        </div>
                        <div class="justify-content-center">
                            <button type="submit" class="btn loginbtn rounded-pill">Login</button>
                        </div>

                        <div class="create justify-content-center mt-2">
                            <a class="fpwdlink" href="#" data-bs-toggle="modal" data-bs-target="#forgotpwd" data-bs-dismiss="modal">Forgot Password?</a>
                            <p>Don't have an account? <a asp-action="Account" asp-controller="Home">Create an account</a></p>
                        </div>
                    </form>

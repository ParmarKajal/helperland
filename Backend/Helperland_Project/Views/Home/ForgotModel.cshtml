@model Helperland_Project.ViewModels.ForgotPasswordViewModel
@{
    Layout = null;
}
<form method="post" asp-action="ForgotPassword" asp-controller="Home">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="modal modal-shadow" id="forgotpwd">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header login-modal-header">
                    <h3 class="modal-title login-main-heading">
                        <b> Forgot Password </b>
                    </h3>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                </div>
                <div class="modal-body">
                    @*<div class="text-danger">@ViewBag.error</div>*@
                    <div class="input-group mb-3">
                        <input asp-for="email" class="form-control" placeholder="Email" 
                               style="border-right: none;">
                        <span class="input-group-text"> <i class="fas fa-user"></i> </span>
                    </div>
                    <span asp-validation-for="email" class="text-danger"></span>
                    <br>
                    <button type="submit" class="btn  loginbtn"> Send </button>
                    <br><br>
                    <p class="login-para">
                        <a href="#" class="login-para-links" data-bs-toggle="modal" data-bs-target="#login" data-dismiss="modal">
                            <b>
                                Login now
                            </b>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</form>
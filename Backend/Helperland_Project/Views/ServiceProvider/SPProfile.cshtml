        function spPasswordUpdate() {


            var data = {};

            data.Password = $("#op").val();
            data.NewPassword = $("#np").val();
            data.ConfirmPassword = $("#rp").val();
            // var pass = data.oldpwd;



            $.ajax({
                type: 'POST',
                url: '/ServiceProvider/spUpdatePassword',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',

                data: data,
                success: function (result) {
                    if (result.value == "true") {
                        alert("Updated Password");

                        //$("#tabContent3").show();
                    }
                    if (result.value == "false") {
                        alert("Plz Enter Valid Password");
                    }
                },
                error: function () {
                    alert('Failed to update Data');
                    console.log('Failed ');
                }
            })
        }


        function AvtarClick(val) {

            const ex = document.getElementsByClassName("avtar_image");
            for (let i = 0; i < ex.length; i++) {

                ex[i].style.border = "1px solid #e0e0e0";


            }

            /* document.getElementById(val.id).style.border = "3px solid #1d7a8c";*/


            var imageid = "#avtar" + val.id;
            var imgid = "avtar" + val.id;
            document.getElementById(imgid).style.border = "3px solid #1d7a8c";

            var part = $(imageid).attr("src").split('/');
            var imgname = part[part.length - 1];
            selectedavtar = imgname;
            $("#savepicture").prop("value", selectedavtar);

        }

        function submitedavtar(val) {
            var data = {};
            data.UserProfilePicture = selectedavtar;
            data.FirstName = $("#firstname").val();
            data.LastName = $("#lastname").val();
            data.Email = $("#email").val();
            data.Mobile = $("#mobile").val();
            /* data.Gender = $("#firstname").val();*/
            data.BirthDate = $("#birthdate").val();
            data.BirthMonth = $("#birthmonth").val();
            data.BirthYear = $("#birthyear").val();
            data.AddressLine1 = $("#a1").val();
            data.AddressLine2 = $("#a2").val();
            data.City = $("#city").val();
            data.PostalCode = $("#zippcode").val();
            $.ajax({
                type: 'POST',
                url: '/ServiceProvider/ServiceProviderProfileDetail',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',

                data: data,
                success: function (result) {
                    if (result.value == "true") {
                        alert("Updated Avtar");

                        //$("#tabContent3").show();
                    }
                    if (result.value == "false") {
                        alert("Plz Enter Valid Password");
                    }
                },
                error: function () {
                    alert('Failed to update Data');
                    console.log('Failed ');
                }
            })

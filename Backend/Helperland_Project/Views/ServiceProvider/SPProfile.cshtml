                                    <label for="male" class="add-new-button-label" style="font-weight:normal; " asp-for="Gender">Male</label>&nbsp;&nbsp;
                                    <input type="radio" id="female" value="2" asp-for="Gender">
                                    <label for="female" class="add-new-button-label" style="font-weight:normal; " asp-for="Gender">Female</label>&nbsp;&nbsp;
                                    <input type="radio" id="rather-not-to-say" value="3" asp-for="Gender">
                                    <label for="rather-not-to-say" class="add-new-button-label" style="font-weight:normal; " asp-for="Gender">Rather Not To Say</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col" style="margin-bottom: 10px;">

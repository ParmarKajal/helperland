                                        <img class="avtar_image" src="../image/avatar-iron.png" asp-append-version="true" style="border-radius:50%;" id="avtarimage30">
                                    </div>
                                    <div style="display: inline; margin-right:10px ;" id="image40" onclick="AvtarClick(this)">
                                        <label></label>
                                        <img class="avtar_image" src="../image/avatar-ship.png" asp-append-version="true" style="border-radius:50%;" id="avtarimage40">
                                    </div>
                                    <div style="display: inline; margin-right:10px ;" id="image50" onclick="AvtarClick(this)">
                                        <label></label>
                                        <img class="avtar_image" src="../image/avatar-male.png" asp-append-version="true" style="border-radius:50%;" id="avtarimage50">
                                    </div>


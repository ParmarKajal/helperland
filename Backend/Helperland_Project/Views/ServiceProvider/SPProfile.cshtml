                                </div>
                                <div class="col-sm-4">
                                    <label class="add-new-button-label">House Number:</label>
                                    <input asp-for="AddressLine2" placeholder="House Number" class="form11" id="a2">
                                </div>
                                <div class="col-sm-4">
                                    <label class="add-new-button-label">Postal Code:</label>
                                    <input asp-for="PostalCode" placeholder="Postal Code" class="form11" id="zippcode">
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-sm-4">
                                    <label for="street-name" class="form-label add-new-button-label">City</label>
                                    <input asp-for="City" placeholder="City" class="form11" id="city">
                                </div>
                            </div>
                            <div>
                                <button type="button" class="savecomputer-btn" value="" onclick="submitedavtar(this.value);" id="savepicture"  style="width: 100px;">Save</button>
                            </div>
                        </form>
